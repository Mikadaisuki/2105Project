<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/temp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fef6e4"
    tools:context=".reviewsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Client:"
                android:textSize="30dp"
                android:background="@android:color/transparent"
                android:textColor="#001858"/>

            <TextView
                android:id="@+id/ClientDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="@android:color/transparent"
                android:textColor="#001858"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cook:"
                android:textSize="30dp"
                android:background="@android:color/transparent"
                android:textColor="#001858"/>

            <TextView
                android:id="@+id/CookDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="@android:color/transparent"
                android:textColor="#001858"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail:"
                android:textSize="30dp"
                android:background="@android:color/transparent"
                android:textColor="#001858"/>

            <TextView
                android:id="@+id/ComText"
                android:layout_width="match_parent"
                android:layout_height="515dp"
                android:textSize="30dp"
                android:background="@android:color/transparent"
                android:textColor="#001858"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.widget.Button
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="suspend"
                    android:text="Suspend"
                    android:background="@drawable/bt_bg_03"
                    android:textColor="#001858" />

                <android.widget.Button
                    android:layout_marginEnd="10dp"
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="dismiss"
                    android:text="Dismiss"
                    android:background="@drawable/bt_bg_03"
                    android:textColor="#001858" />

                <android.widget.Button
                    android:layout_marginEnd="10dp"
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="tempsuspend"
                    android:text="tempSUS"
                    android:background="@drawable/bt_bg_03"
                    android:textColor="#001858" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>